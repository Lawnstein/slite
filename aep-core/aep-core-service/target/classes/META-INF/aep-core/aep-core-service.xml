<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:sofa="http://schema.alipay.com/sofa/schema/slite"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://schema.alipay.com/sofa/schema/slite http://schema.alipay.com/sofa/slite.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


	<!-- Publish tr service -->
	<bean id="sampleServiceProvider" class="com.csii.aep.service.SampleServiceImpl" />
	<sofa:service interface="com.csii.aep.facade.SampleService"
		ref="sampleServiceProvider">
		<sofa:binding.bolt />
	</sofa:service>


	<bean id="lendServiceProvider" class="com.csii.aep.service.ExternalLendServiceImpl">
		<property name="innerLendService">
			<bean class="com.csii.aep.service.InnerLendServiceImpl" />
		</property>
	</bean>
	<sofa:service interface="com.csii.aep.facade.LendService"
		ref="lendServiceProvider">
		<sofa:binding.bolt />
	</sofa:service>



	<bean id="loanAcctAddServiceProvider" class="com.csii.aep.service.loan.LoanAcctAddServiceImpl" />
	<sofa:service interface="com.csii.aep.facade.loan.LoanAcctAddService"
		ref="loanAcctAddServiceProvider">
		<sofa:binding.bolt />
	</sofa:service>

	<bean id="loanOpenAcctServiceProvider" class="com.csii.aep.service.loan.LoanOpenAcctServiceImpl" />
	<sofa:service interface="com.csii.aep.facade.loan.LoanOpenAcctService"
		ref="loanOpenAcctServiceProvider">
		<sofa:binding.bolt />
	</sofa:service>

	<bean id="fundAcctAddServiceProvider" class="com.csii.aep.service.fund.FundAcctAddServiceImpl" />
	<sofa:service interface="com.csii.aep.facade.fund.FundAcctAddService"
		ref="fundAcctAddServiceProvider">
		<sofa:binding.bolt />
	</sofa:service>




</beans>